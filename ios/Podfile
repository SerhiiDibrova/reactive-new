package Podfile

platform :ios, '11.0'

require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

target 'YourApp' do
  config = use_native_modules!

  use_frameworks! :linkage => :static

  pod 'React', :path => '../node_modules/react-native', :modular_headers => true, :subspecs => [
    'Core',
    'DevSupport',
    'RCTImage',
    'RCTText',
    'RCTNetwork',
    'RCTAnimation',
    'RCTBlob',
    'RCTGeolocation',
    'RCTLinking',
    'RCTWebSocket'
  ]

  pod 'Firebase/Core', '~> 10.0'
  pod 'Firebase/Auth', '~> 10.0'
  pod 'Firebase/Firestore', '~> 10.0'
  pod 'Firebase/Analytics', '~> 10.0'
  pod 'Firebase/Crashlytics', '~> 10.0'
  pod 'Firebase/RemoteConfig', '~> 10.0'

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      end
    end
  end
end

use_react_native!(:path => config["reactNativePath"], :fabric => true, :react_native_version => '0.75')